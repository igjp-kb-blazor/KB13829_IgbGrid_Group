        <IgbColumn Field="@nameof(Person.SalesDivision)" Header="営業部門"  Width="auto"></IgbColumn>
        <IgbColumn Field="@nameof(Person.NumberOfDeals)" Header="成約件数" DataType="GridColumnDataType.Number" HasSummary="true"></IgbColumn>
