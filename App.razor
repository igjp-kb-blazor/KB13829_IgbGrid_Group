<div style="max-width: 900px; margin: auto; padding: 24px; display: flex; flex-direction: column; gap: 24px;">
    <IgbGrid Data="_people"
             Height="600px"
             Width="100%"
             PrimaryKey="@nameof(Person.Id)"
             AutoGenerate="false"
             GroupingExpressions="GroupingExpression1"             
             ShowGroupArea="false"
             SummaryCalculationMode="GridSummaryCalculationMode.ChildLevelsOnly">
